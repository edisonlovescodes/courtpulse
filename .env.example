# SQLite for local dev
DATABASE_URL="file:./dev.db"

# Whop placeholder headers (dev/testing)
# Backend reads X-Whop-User-Id and X-Whop-Plan if present
# Plans: starter | pro | max
DEV_USER_ID="dev_user_1"
DEV_PLAN="pro"

# When deploying, switch to a managed Postgres and set WHOP_APP_SECRET
# WHOP_APP_SECRET="replace_me_in_prod"

# Optional public URL (used for some fetches)
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Whop configuration (server + client)
# WHOP_API_KEY="<server_api_key>"
# NEXT_PUBLIC_WHOP_APP_ID="<app_id>"
# NEXT_PUBLIC_WHOP_AGENT_USER_ID="<agent_user_id>"
# NEXT_PUBLIC_WHOP_COMPANY_ID="<company_id>"
# Map product IDs (or plan slugs) to internal plans
# Format: id1:starter,id2:pro,id3:max
# WHOP_PLAN_MAP="prod_starter:starter,prod_pro:pro,prod_max:max"

# Webhook signing secret if verifying webhooks
# WHOP_WEBHOOK_SECRET="replace_me"
